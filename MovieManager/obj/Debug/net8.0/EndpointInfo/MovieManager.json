{
  "openapi": "3.0.1",
  "info": {
    "title": "MovieManager",
    "version": "1.0"
  },
  "paths": {
    "/api/Movies": {
      "get": {
        "tags": [
          "Movies"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetAllMoviesQuery"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GetAllMoviesQuery"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GetAllMoviesQuery"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Movies"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddMovieDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AddMovieDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AddMovieDto"
              }
            }
          }
